= form_for [:admin, @qualifier] do |f|
  - if @qualifier.errors.any?
    =render 'shared/error_messages', :record => @qualifier

  .field
    =f.label :name
    =f.text_field :name

  .field
    =f.label :category
    =f.select :category, Qualifier::CATEGORIES.map { |category| [category.capitalize, category] }, :include_blank => true

  .actions
    = f.submit 'Save'
