.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{ :'data-toggle' => "collapse", :'data-target' => ".nav-collapse" }
        .icon-bar
        .icon-bar
        .icon-bar
      = link_to t('family_card.family_of', parent_name: @family_card.default_parent), family_card_path(@family_card), class: 'brand'
      .nav-collapse
        %ul.nav.pull-right
          %li.divider-vertical
          %li
            = link_to family_card_path(@family_card) do
              %i.icon-chevron-left
              = t('back_to', location: 'family card')

.container
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= t('audit.action')
        %th= t('audit.changes')
        %th= t('audit.changed_by')
    %tbody
      - @audits.all.each do |audit|
        %td
          %label.label-info= audit.action
          = t('audit.created_at', datetime: audit.created_at)
        %td
          = render "audits/audited_#{audit.action}", audit: audit
        %td
          = audit.user.name
