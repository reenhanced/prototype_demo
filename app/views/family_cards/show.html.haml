.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{ :'data-toggle' => "collapse", :'data-target' => ".nav-collapse" }
        .icon-bar
        .icon-bar
        .icon-bar
      %a.brand{ href: "#"}= t('family_card.family_of', parent_name: @family_card.default_parent)
      .nav-collapse
        %ul.nav.pull-right
          - if can? :create, @call_log
            %li
              %a{ href: "#", :'data-toggle' => "modal", :'data-target' =>"#new_call_log" }
                %i.icon-plus
                = t('family_card.add_call_log', default: 'Add call log')
          - if current_user.is?(:admin)
            %li.divider-vertical
            %li
              = link_to family_card_audits_path(@family_card) do
                %i.icon-road
                = t('family_card.show_audit_trail')

= render 'call_logs/form', family_card: @family_card, call_log: @call_log
= render @family_card
