= form_for @family_card, html: {class: 'form-horizontal'} do |f|
  = render 'shared/error_messages', record: @family_card

  .control-group
    = f.label :parent_first_name, "Parent's/Guardian's First Name", class: 'control-label'
    .controls
      = f.text_field :parent_first_name, placeholder: "Registering P/G Last Name"
  .control-group
    = f.label :parent_last_name, "Parent's/Guardian's Last Name", class: 'control-label'
    .controls
      = f.text_field :parent_last_name, placeholder: "Registering P/G Last Name"
  .control-group
    = f.label :phone, class: 'control-label'
    .controls
      = f.text_field :phone, placeholder: 'Phone Number'
  .control-group
    = f.label :email, class: 'control-label'
    .controls
      = f.text_field :email, placeholder: 'E-mail Address'
  .control-group
    = f.label :address1, "Address", class: 'control-label'
    .controls
      %p
        = f.text_field :address1, placeholder: 'Street Address'
      %p
        = f.text_field :address2, placeholder: 'Address2'
      %p
        = f.text_field :city, placeholder: 'City', class: 'inline input-medium'
        = subregion_select :family_card, :state, 'US', class: 'inline input-medium'
        = f.text_field :zip_code, placeholder: 'Zip Code', class: 'inline input-small'

  .form-actions.clearfix
    = f.submit "Create Family Card", class: 'btn btn-primary'
