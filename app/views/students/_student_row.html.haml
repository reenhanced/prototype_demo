- unless student.new_record?
  %tr
    %td= student.first_name
    %td= student.last_name
    %td= student.email
    %td= student.phone
    %td
      %address
        = student.address1
        %br/
        - if student.address2
          = student.address2
          %br/
        = "#{student.city}, #{student.state}  #{student.zip_code}"
